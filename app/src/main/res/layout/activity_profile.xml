<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorGreyishWhiteBg"
    tools:context="com.example.jiahui.iiplumi.ProfileActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar" />

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Profile Photo Header -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/profile_headerimg"/>

            <!-- Profile Header -->
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width=" 115dp"
                android:layout_height="115dp"
                android:src="@drawable/defaultprofilepic"
                android:layout_gravity="left|top"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp" />

            <!-- No. of Jobs Taken -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:src="@drawable/profile_jobno"
                android:layout_marginTop="90dp"
                android:layout_marginRight="75dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[No.]"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_gravity="left|top"
                android:layout_marginTop="92dp"
                android:layout_marginLeft="295dp"/>

            <!-- User's Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Adrian Yeo]"
                android:textColor="@color/colorItem"
                android:textSize="20sp"
                android:layout_gravity="right|top"
                android:layout_marginTop="140dp"
                android:layout_marginRight="60dp"/>

            <!-- Rows Start -->
            <!-- Join Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Joined on"
                android:textColor="@color/colorItem"
                android:textSize="14sp"
                android:layout_marginTop="182dp"
                android:layout_marginLeft="@dimen/page_margin_left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="22/05/2015"
                android:textColor="@color/colorItem"
                android:textSize="14sp"
                android:layout_marginTop="182dp"
                android:layout_marginLeft="85dp" />
            <!-- Gender -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="205dp"
                android:background="@color/colorGreyLineDivider" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_gendericon"
                android:layout_marginTop="216dp"
                android:layout_marginLeft="@dimen/page_margin_left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Gender"
                android:textColor="@color/colorItem"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="218dp"
                android:layout_marginLeft="@dimen/item_margin" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="[Gender]"
                android:textColor="@color/colorInput"
                android:textSize="14sp"
                android:layout_gravity="right|top"
                android:layout_marginTop="218dp"
                android:layout_marginRight="@dimen/page_margin_right" />

            <!-- Birthdate -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="@dimen/page_margin_left"
                android:background="@color/colorGreyLineDivider" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_bdayicon"
                android:layout_marginTop="261dp"
                android:layout_marginLeft="@dimen/page_margin_left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthdate"
                android:textColor="@color/colorItem"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="263dp"
                android:layout_marginLeft="@dimen/item_margin" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="[Birthdate]"
                android:textColor="@color/colorInput"
                android:textSize="14sp"
                android:layout_gravity="right|top"
                android:layout_marginTop="263dp"
                android:layout_marginRight="@dimen/page_margin_right" />

            <!-- Contact -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="295dp"
                android:layout_marginLeft="@dimen/page_margin_left"
                android:background="@color/colorGreyLineDivider" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_contacticon"
                android:layout_marginTop="306dp"
                android:layout_marginLeft="@dimen/page_margin_left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textColor="@color/colorItem"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="308dp"
                android:layout_marginLeft="@dimen/item_margin" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="[Contact]"
                android:textColor="@color/colorInput"
                android:textSize="14sp"
                android:layout_gravity="right|top"
                android:layout_marginTop="308dp"
                android:layout_marginRight="@dimen/page_margin_right" />

            <!-- Email -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="340dp"
                android:layout_marginLeft="@dimen/page_margin_left"
                android:background="@color/colorGreyLineDivider" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_emailicon"
                android:layout_marginTop="351dp"
                android:layout_marginLeft="@dimen/page_margin_left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/colorItem"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="353dp"
                android:layout_marginLeft="@dimen/item_margin" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="[Email]"
                android:textColor="@color/colorInput"
                android:textSize="14sp"
                android:layout_gravity="right|top"
                android:layout_marginTop="353dp"
                android:layout_marginRight="@dimen/page_margin_right" />

            <!-- Bank Account -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="385dp"
                android:layout_marginLeft="@dimen/page_margin_left"
                android:background="@color/colorGreyLineDivider" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_bankicon"
                android:layout_marginTop="396dp"
                android:layout_marginLeft="@dimen/page_margin_left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Account"
                android:textColor="@color/colorItem"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="398dp"
                android:layout_marginLeft="@dimen/item_margin" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="POSB Savings"
                android:textColor="@color/colorInput"
                android:textSize="14sp"
                android:layout_gravity="right|top"
                android:layout_marginTop="398dp"
                android:layout_marginRight="@dimen/page_margin_right" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="XXX-XXX23-4"
                android:textColor="@color/colorInput"
                android:textSize="14sp"
                android:layout_gravity="right|top"
                android:layout_marginTop="428dp"
                android:layout_marginRight="@dimen/page_margin_right" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="458dp"
                android:background="@color/colorGreyLineDivider" />

            <!-- Certificate -->

            </FrameLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:background="@android:color/white"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer" />

</android.support.v4.widget.DrawerLayout>